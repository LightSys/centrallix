$Version=2$

// This is the main Centrallix configuration file.  The location of this file
// is normally /usr/local/etc/centrallix.conf, but can be changed via the -c
// command line option to the Centrallix binary.
//
centrallix "system/config"
    {
    // General Configuration Data
    types_config = "##SYSCONFDIR##/centrallix/types.cfg";
    useragent_config = "##SYSCONFDIR##/centrallix/useragent.cfg";
    rootnode_type = "system/uxfile";
    rootnode_file = "##SYSCONFDIR##/centrallix/rootnode";
    iface_dir = "/sys/ifc";	    // this is an OSML path
    theme_dir = "/sys/themes";	    // OSML path
    
    // Configuration for various modules follows....

    // The HTTP network interface module.
    net_http "system/config"
        {
	listen_port = 800;
	user_session_limit = 100; // max sessions per user
	server_string = "Centrallix/0.7.5";
	auth_realm = "Centrallix";
	session_cookie = "CXID";
	session_watchdog_timer = 180; //seconds
	session_inactivity_timer = 1800; //seconds
	enable_gzip = 0; // false - NS4 fails on this
	condense_js = 1; // true
	dir_index = "index.app","index.html","index.htm","index.rpt";
	access_log = "/var/log/cx_access_log";
	}

    // The BDQS network interface module.
    net_bdqs "system/config"
	{
	listen_port = 808;
	enable_bdqs = "no";
	}

    // The NFS module
//    net_nfs "system/config"
//	{
//	mount_port=5168;
//	exports "system/config"
//	    {
//	    export1 "system/config" { path="/"; readonly=1; }
//	    }
//	inode_map = "##SYSCONFDIR##/centrallix/inode.map";
//	}

    // The MSS MTask Session Manager module.
    mtsession "system/config"
	{
	// Authentication method - "system" or "altpasswd".
	auth_method = "system";
	//auth_method = "altpasswd";
	//altpasswd_file = "##SYSCONFDIR##/centrallix/cxpasswd";

	// Error message logging mechanism.  Method is 'stdout' or 'syslog'.
	log_method = "##LOGMETHOD##";

	// Log all errors, or just those occurring outside a session?
	log_all_errors = "yes";

	// The program name that shows up in the syslog.
	log_progname = "centrallix";
	}

    // Loadable Modules
    modules "system/config"
	{
	sybd "system/config-module" { enable_module=@ENABLE_SYBASE@; path="##LIBDIR##/centrallix/objdrv_sybase.so"; type="osdriver"; }
	http "system/config-module" { enable_module=@ENABLE_HTTP@; path="##LIBDIR##/centrallix/objdrv_http.so"; type="osdriver"; }
	xml "system/config-module" { enable_module=@ENABLE_XML@; path="##LIBDIR##/centrallix/objdrv_xml.so"; type="osdriver"; }
	mime "system/config-module" { enable_module=@ENABLE_MIME@; path="##LIBDIR##/centrallix/objdrv_mime.so"; type="osdriver"; }
	gzip "system/config-module" { enable_module=@ENABLE_GZIP@; path="##LIBDIR##/centrallix/objdrv_gzip.so"; type="osdriver"; }
	dbl "system/config-module" { enable_module=@ENABLE_DBL@; path="##LIBDIR##/centrallix/objdrv_dbl.so"; type="osdriver"; }
	fp "system/config-module" { enable_module=@ENABLE_FP@; path="##LIBDIR##/centrallix/objdrv_fp.so"; type="osdriver"; }
	mbox "system/config-module" { enable_module=@ENABLE_MBOX@; path="##LIBDIR##/centrallix/objdrv_mbox.so"; type="osdriver"; }
	shell "system/config-module" { enable_module=@ENABLE_SHELL@; path="##LIBDIR##/centrallix/objdrv_shell.so"; type="osdriver"; }
	nnfs "system/config-module" { enable_module=@ENABLE_NETNFS@; path="##LIBDIR##/centrallix/net_nfs.so"; type="netdriver"; }
	pop3 "system/config-module" { enable_module=@ENABLE_POP3@; path="##LIBDIR##/centrallix/objdrv_pop3_v3.so"; type="osdriver"; }
	}
    }

