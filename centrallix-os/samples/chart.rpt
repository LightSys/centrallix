$Version=2$
chart "system/report"
    {
    title = "Chart Test";
    resolution = 600;
    document_format="application/pdf";
    pagewidth=85;
    pageheight=66;
    marginleft=10;
    marginright=10;
    margintop=4.2;
    marginbottom=2.2;

    files_qy "report/query"
	{
	sql = "	select
		    :name,
		    :size,
		    double = :size * 3,
		    abbrev = substring(:name, 1, 3)
		from
		    /samples
		limit
		    8
		";
	}

    text "report/data"
	{
	x=0; y=0;
	width=65;
	height=2;
	fontsize=8;
	font=times;
	url="https://lightsys.org";
	value=runserver("Test text\n");
	}

    area "report/area"
	{
	x=0; y=2; height=8; width=65;
	border=0.01;
	fontsize=10;

	chart "report/chart"
	    {
	    source=files_qy;
	    x=0.1; y=0.1; height=12; width=64.7;
	    chart_type=bar;
	    scale=no;
	    text_rotation=no;
	    title="File Sizes";
	    color="dark green";
	    zoom=1.0;

	    chart_x "report/chart-axis" { axis=x; label="Files"; }

	    chart_y "report/chart-axis" { axis=y; label="Size in Bytes"; }

	    chart_series "report/chart-series"
		{
		x_value=runserver(:files_qy:name);
		y_value=runserver(:files_qy:size * 10);
		show_value=yes;
		color="dark red";
		}

	    chart_series_2 "report/chart-series"
		{
		x_value=runserver(:files_qy:name);
		y_value=runserver(:files_qy:double * 10);
		}
	    }
	}
    }
